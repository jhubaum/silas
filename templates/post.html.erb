<!doctype HTML>

<html>
  <head>
    <meta charset="utf-8">
    <link href="css/style.css"  rel="stylesheet" type="text/css">
    <title>Johannes Huwald ~ <%= @preamble[:title] %></title>
  </head>
  <body>
    <nav class="nav">
      <div class="nav-container">
        <a href="https://jhuwald.com/" id="nav-title">
          <h2>Johannes Huwald</h2>
        </a>
        <ul>
          <% pages.each do |page| %>
            <li><a href="<%= page[0] %>"><%= page[1] %></a></li>
          <% end %>
        </ul>
      </div>
      <hr size="0.5px" width="90%">
    </nav>
    <main>
      <h1><%= @preamble[:title] %></h1>
      <span id="date-published"> Published on <%= @preamble[:published].to_pretty_s %></span>

      <% iterate_elements() do |elem| %>
        <% case elem when Text %><%= elem.text %>
          <% when Section %>
          <%= elem.heading %>
        <% end %>
        <% end %>
    </main>
    <footer>
      Link to rss feed
      If you liked what you read, consider to say Hi at <a href="mailto:hey@jhuwald.com">hey@jhuwald.com</a>.
      <hr size="0.5px" width="90%">
      <a href="#" class="top">Top</a>
    </footer>
  </body>
</html>
