<!doctype HTML>

<html>
  <head>
    <meta charset="utf-8">
    {{#each css}}
    <link rel="stylesheet" href="{{this}}" type="text/css"/>
    {{/each}}
    <link rel="icon" type="image/png" href="{{favicon}}">
    <title>{{title}}</title>
  </head>
  <body>
    {{log "layout" level="error"}}
    <nav class="nav">
      <div class="nav-container">
        <a href="{{layout.base-url}}" id="nav-title">
          <h2>Johannes Huwald</h2>
        </a>
        <ul>
          {{#each layout.header as |link| }}
          <li><a href="{{link.target}}">{{link.title}}</a></li>
          {{/each}}
        </ul>
      </div>
    </nav>
    {{> @partial-block}}
  </body>
</html>
