<main>
  <h1><%= info.title %></h1>
  <span id="date-published">
    <% if draft? %>
    DRAFT
    <% else %>
    Published on <%= info.published.to_pretty_s %>
    <% unless info.last_edit == nil %>
    (Last edit: <%= info.last_edit.to_pretty_s %>)
    <% end %>
    <% end %>
  </span>

  <%= yield %>

</main>
<footer>
  <p><a class="top" href="#">Top</a></p>
</footer>
